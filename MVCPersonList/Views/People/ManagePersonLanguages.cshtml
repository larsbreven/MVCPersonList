@model PersonLanguagesVM
@{ ViewData["Title"] = "Manage People Languages"; }

<h1>Manage Person Languages</h1>

<div class="row">
    <div class="col-6">
        <h4>Current</h4>
    </div>
    <div class="col-6">
        <h4>Available</h4>
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul>
            @foreach (var item in Model.Person.PersonLanguages)
            {
<li>
    @item.Language.Name @Html.ActionLink("Remove", "RemoveLanguageToPerson", "Person", new { personId = Model.Person.Id, languageId = item.LanguageId })
</li>            }
        </ul>
    </div>
    <div class="col-6">
        <ul>
            @foreach (var item in Model.Languages)
            {
<li>
    @item.Name @Html.ActionLink("Add", "AddLanguageToPerson", "Person", new { personId = Model.Person.Id, languageId = item.Id })
</li>            }
        </ul>
    </div>
</div>