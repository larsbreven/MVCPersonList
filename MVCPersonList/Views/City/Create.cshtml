@model CreateCity
@{
    ViewData["Title"] = "Create City";
}

<h1>Create</h1>

<form asp-action="Create" method="post">
    <label asp-for="CityName"></label>
    <input asp-for="CityName" />
    <span asp-validation-for="CityName"></span>

    <label asp-for="CountryId"></label>
    <select asp-for="CountryId">
        @foreach (var item in Model.CityList)
        {
            <option value="@item.Id"></option>
        }
    </select>
    <span asp-validation-for="CountryId"></span>





    <button>Create</button>                     <!-- If there is a button inside a form it will react as submit -->
</form>